{% include 'backend/parts/head.twig' %}

<body class="g-sidenav-show bg-gray-200">
  {% include 'backend/parts/aside.twig' %}
  <div class="main-content position-relative max-height-vh-100 h-100">
    {% include 'backend/parts/navbar.twig' %}
    <div class="container-fluid px-2 px-md-4">
      <div class="page-header min-height-300 border-radius-xl mt-4"
        style="background-image: url('https://images.unsplash.com/photo-1531512073830-ba890ca4eba2?ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=1920&q=80');">
        <span class="mask  bg-gradient-info opacity-6"></span>
      </div>
      <div class="card card-body mx-3 mx-md-4 mt-n6">
        <div class="row gx-4 mb-2">
          <!-- FORMULAIRE CATEGORIE -->
          <h4 class="text-center mb-4 mt-5">Modifier une Cat√©gorie</h4>
          <div class="d-flex">
            <div class="ms-3 w-100">
              <form action="/admin/categoryupdate/{{category.id}}" method="post">
                <input type="hidden" name="categoryId" value="{{category.id}}">

                <div class="row">
                  <div class="input-group input-group-static mb-4">
                    <label for="name">Nom</label>
                    <input type="text" class="form-control" id="name" name="name" value="{{category.name}}">
                  </div>
                </div>

                <div class="mb-4">
                  <div class="input-group input-group-static">
                    <label for="description">Description</label>
                    <input type="text" id="description" name="description" value="{{category.description}}" class="form-control">
                  </div>
                </div>

                <div class="mb-4">
                  <div class="input-group input-group-static">
                    <label for="slug">Slug</label>
                    <input type="text" id="slug" name="slug" value="{{category.slug}}" class="form-control">
                  </div>
                </div>


                <div>
                  <button type="submit" class="btn bg-gradient-dark pull-end mt-2">
                    <i class="fa fa-send me-2"></i> Enregistrer
                  </button>
                </div>
              </form>

            </div>
          </div> <!-- end media-post -->
        </div>

      </div>
    </div>



    {% include 'backend/parts/footer.twig' %}
</body>

</html>






