{% include 'backend/parts/head.twig' %}

<body class="g-sidenav-show bg-gray-200">
    {% include 'backend/parts/aside.twig' %}
    <div class="main-content position-relative max-height-vh-100 h-100">
        {% include 'backend/parts/navbar.twig' %}
        <div class="container-fluid py-4">
            <div class="row">
                <div class="col-12">
                    <div class="card my-4">
                        <div class="card-header p-0 position-relative mt-n4 mx-3 z-index-2">
                            <div class="bg-gradient-dark shadow-dark border-radius-lg pt-4 pb-3 d-flex align-items-center">
                                    <h6 class="text-white text-capitalize ps-3 ">Liste des tags</h6>
                                    <a class="btn btn-outline-secondary btn-sm ms-4" href="/admin/tagcreate">Ajouter un Tag</a>
                            </div>
                        </div>
                        <div class="card-body px-0 pb-2">
                            <div class="table-responsive p-0">
                                <table class="table align-items-center mb-0">
                                    <thead>
                                        <tr>
                                            <th
                                                class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">
                                                Nom</th>
                                            <th
                                                class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">
                                                Description
                                            </th>
                                            <th
                                                class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">
                                                Slug
                                            </th>
                                            <th
                                                class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">
                                                Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        {% for tag in tags %}
                                        <tr>
                                            <td>
                                                <p class="text-xs font-weight-bold mb-0">{{ tag.name}}</p>
                                            </td>
                                            <td class="align-middle text-center">
                                                <span
                                                    class="text-secondary text-xs font-weight-bold">{{ tag.description}}</span>
                                            </td>
                                            <td class="align-middle text-center">
                                                <span
                                                    class="text-secondary text-xs font-weight-bold">{{ tag.slug }}</span>
                                            </td>
                                            <td class="align-middle text-center">
                                                <!-- BTN UPDATE -->
                                                <a class="btn btn-link text-secondary px-3 mb-0"
                                                    href="/admin/tagupdate/{{ tag.id}}"><i
                                                        class="material-icons text-sm me-2">edit</i>Modifier</a>
                                                <!-- BTN DELETE -->
                                                <a class="btn btn-link text-danger text-gradient px-3 mb-0"
                                                    data-bs-toggle="modal" data-bs-target="#modal-delete{{ tag.id}}"><i
                                                        class="material-icons text-sm me-2">delete</i>Supprimer</a>
                                                <!-- MODAL DELETE -->
                                                <div class="modal fade" id="modal-delete{{ tag.id}}" tabindex="-1"
                                                    aria-labelledby="modal-delete{{ tag.id}}" style="display: none;"
                                                    aria-hidden="true">
                                                    <div class="modal-dialog modal-danger modal-dialog-centered modal-"
                                                        role="document">
                                                        <div class="modal-content">
                                                            <div class="modal-header">
                                                                <h6 class="modal-title font-weight-normal"
                                                                    id="modal-title-delete{{ tag.id}}">
                                                                    Confirmation
                                                                    de suppression</h6>
                                                                <button type="button" class="btn-close text-dark"
                                                                    data-bs-dismiss="modal" aria-label="Close">
                                                                    <span aria-hidden="true">×</span>
                                                                </button>
                                                            </div>
                                                            <div class="modal-body">
                                                                <div class="py-3 text-center">
                                                                    <span class="display-2"><i
                                                                            class="text-dark fas fa-skull-crossbones"></i></span>
                                                                    <h4 class="text-gradient text-danger mt-4">Supprimer
                                                                        ce tag?</h4>
                                                                    <p>Attention, cette action est irréversible</p>
                                                                </div>
                                                            </div>
                                                            <div class="modal-footer">
                                                                <a role="button" class="btn btn-danger"
                                                                    href="/admin/tagdelete/{{tag.id}}">Oui, supprimer</a>
                                                                <button type="button"
                                                                    class="btn btn-link ml-auto text-danger"
                                                                    data-bs-dismiss="modal">Annuler</button>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                                <!-- END MODAL DELETE -->
                                            </td>
                                        </tr>
                                        {% endfor %}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            {{ pagination|raw }}
            {% include 'backend/parts/footer.twig' %}
</body>

</html>