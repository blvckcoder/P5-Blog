{% extends 'auth/layout.html.twig' %}

{% block title %}
<title>Blog PHP</title>
{% endblock %}

{% block content %}

<section>
    <div class="page-header min-vh-100">
        <div class="container">
            
            <div class="row">
                <div
                    class="col-6 d-lg-flex d-none h-100 my-auto pe-0 position-absolute top-0 start-0 text-center justify-content-center flex-column">
                    <div class="position-relative bg-gradient-primary h-100 m-3 px-7 border-radius-lg d-flex flex-column justify-content-center"
                        style="background-image: url('../public/assets/img/illustration/signup.jpg'); background-size: cover;"
                        loading="lazy">
                    </div>
                </div>
                <div class="col-xl-4 col-lg-5 col-md-7 d-flex flex-column ms-auto me-auto ms-lg-auto me-lg-5">
                    {% include 'flash/_messageFlash.twig' %}
                    <div class="card card-plain">
                        <div class="card-header">
                            <h4 class="font-weight-bolder">S'inscrire</h4>
                            <p class="mb-0">Entrez vos informations pour créer votre compte</p>
                        </div>
                        <div class="card-body">
                            <form action="/signup" method="post" role="form">
                                <div class="input-group input-group-static mb-3">
                                    <label>Pseudo *</label>
                                    <input type="text" class="form-control" name="nickname" required="required">
                                </div>
                                <div class="input-group input-group-static mb-3">
                                    <label>Nom *</label>
                                    <input type="text" class="form-control" name="name" required="required">
                                </div>
                                <div class="input-group input-group-static mb-3">
                                    <label>Prénom *</label>
                                    <input type="text" class="form-control" name="firstname" required="required">
                                </div>
                                <div class="input-group input-group-static mb-3">
                                    <label>Email *</label>
                                    <input type="email" class="form-control" name="mail" required="required">
                                </div>
                                <div class="input-group input-group-static mb-3">
                                    <label>Password *</label>
                                    <input type="password" class="form-control" name="password" required="required">
                                </div>
                                <div class="text-center">
                                    <button type="submit"
                                        class="btn btn-lg bg-gradient-primary btn-lg w-100 mt-4 mb-0">Créer un compte</button>
                                </div>
                            </form>
                        </div>
                        <div class="card-footer text-center pt-0 px-lg-2 px-1">
                            <p class="mb-2 text-sm mx-auto">
                                Vous avez déjà un compte?   
                                <a href="/login" class="text-primary text-gradient font-weight-bold">Se Connecter</a>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

{% endblock %}
